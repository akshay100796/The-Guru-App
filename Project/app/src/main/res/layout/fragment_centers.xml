<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.centers.CentersFragment">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/style_text_10"
            android:text="Your Centers"
            android:fontFamily="@font/font_prata"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_6ssp"
            android:layout_marginTop="@dimen/_6ssp"
            android:textSize="@dimen/_16ssp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recycler_centers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/layout_recycler_centers"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>