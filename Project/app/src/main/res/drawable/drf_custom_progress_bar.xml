<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="0">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">

        <size
            android:width="70dip"
            android:height="70dip" />

        <gradient
            android:angle="0"
            android:startColor="@color/color_yellow_600"
            android:centerColor="@color/color_yellow_400"
            android:endColor="@color/white"
            android:type="linear"
            android:useLevel="false" />

    </shape>
</rotate>
