<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_prata</item>
    </style>

    <style name="style_text_5" parent="wrap_wrap">
        <item name="android:textSize">@dimen/_5ssp</item>
    </style>

    <style name="style_text_6" parent="wrap_wrap">
        <item name="android:textSize">@dimen/_6ssp</item>
    </style>

    <style name="style_text_8" parent="wrap_wrap">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="style_text_10" parent="wrap_wrap">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="style_edit_match_wrap" parent="style_text_6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/drf_edit_input_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:contentDescription" />
        <item name="android:hint" />
        <item name="android:autofillHints" />
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

    <style name="datePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/color_yellow_400</item>
    </style>


    <style name="selfDefineStyle" parent="MaterialAlertDialog.Material3">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_55ssp</item>
        <item name="textFillColor">@color/black</item>
        <item name="fontFamily">@font/font_prata</item>
        <item name="titleTextColor">@color/black</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">?android:colorPrimary</item>
        <item name="android:colorControlActivated">?android:colorPrimary</item>
        <item name="android:colorControlHighlight">@color/transparent</item>
    </style>

    <style name="style_bottom_sheet" parent="Widget.Design.BottomSheet.Modal" >
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.65</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_to_up</item>
        <item name="android:windowExitAnimation">@anim/slide_to_down</item>
    </style>

</resources>