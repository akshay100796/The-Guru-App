<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_blue_600" />
            <corners android:radius="@dimen/_100ssp" />
            <size android:width="70sp" android:height="25sp" />
        </shape>
    </item>

    <item android:gravity="end"
        android:end="5sp"
        android:top="5sp"
        android:bottom="5sp" >
        <shape android:shape="oval">
            <size android:width="25sp"
                android:height="25sp"/>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_100ssp" />
        </shape>
    </item>

</layer-list>
